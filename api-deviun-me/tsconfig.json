{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "sourceMap": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "dist",
    "paths": {
      "just-mongo": [
        "node_modules/just-mongo/index"
      ],
      "dotenv": [
        "node_modules/@types/dotenv/index.d.ts"
      ]
    }
  },
  "include": [
    "*.ts",
    "*/**/*.ts",
    "*/**/*.json"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
